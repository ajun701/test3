# Copy this file to ".env" before running docker compose:
#   cp .env.docker.example .env

# Required: your DashScope key (for AI tasks)
DASHSCOPE_API_KEY=

# Host port mapping
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Backend runtime config
DATABASE_URL=sqlite:////app/data/refund_audit.db
REDIS_URL=redis://redis:6379/0
CELERY_CONCURRENCY=2

# Frontend build config (optional)
# Leave VITE_API_BASE and VITE_BASE_URL empty to auto-use:
#   http://<current-browser-host>:<BACKEND_PORT>
VITE_API_BASE=
VITE_BASE_URL=
